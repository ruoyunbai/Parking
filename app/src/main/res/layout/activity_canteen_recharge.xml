<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.topelec.canteen.RechargeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="125dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"

            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"
            android:src="@drawable/buaa" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="智慧食堂——充值端"
            android:textSize="24sp"
            android:typeface="serif" />
        <TextView
            android:id="@+id/recharge_remain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="余额：NULL"
            android:textSize="30dp"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/editText_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入充值金额"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <Button
                android:id="@+id/recharge_confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="充值" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/register_confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开卡" />

            <Button
                android:id="@+id/delete_card_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="销卡" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
